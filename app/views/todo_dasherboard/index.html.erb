<div id="sidebar-wrapper">
  <span class="glyphicon glyphicon-play" id="menu-toggle" style="padding:10px">
  </span>
  <a href="{{focusedTodo.link}}" target="_blank">
    {{focusedTodo.data}}
  </a>
  <hr/>
  <table class="table">
  <tr><td>Assignee <td><input type="text" ng-model="focusedTodo.assignee" /></tr>
  <tr><td>Status <td><input type="text" ng-model="focusedTodo.status" /></tr>
  </table>
</div>
<!-- /#sidebar-wrapper -->

<!-- Page Content -->
<div id="page-content-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div>
          Filters <input ng-model="filterAssignee" typeahead="member for member in teamMembers | filter:$viewValue" typeahead-min-length="0" placeholder="assignee">
          <input ng-model="filterStatus" typeahead="status for status in bugStatusList" typeahead-min-length="0" placeholder="status">
          <input ng-model="filterTokens" placeholder="tokens">
        </div>
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Title</th>
                <th>Assignee</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="todo in todoList | bugFilter:filterAssignee:filterStatus:filterTokens"
                  ng-click="focusTodo($event)" data-bug-id={{todo.id}}>
                <td>{{todo.data}}</td>
                <td>{{todo.assignee}}</td>
                <td>{{todo.status}}</td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
